<div class="h-[65px] bg-[#0f0f0f] text-white flex justify-between items-center px-10">
    <div class="flex gap-2 items-center">
      <img
        src="./images/logo (3).png"
        alt="kayzzkoffee logo"
        class="w-[50px] h-[50px] object-cover"
      />
      <div class="text-2xl font-bold text-[#9E7148]">kayzzkoffee</div>
    </div>
  
    <div class="flex gap-5 relative">
      <a href="/" class="nav-link hover:text-[#D2AF8C]">Home</a>
      <a href="/dashboard" class="nav-link hover:text-[#D2AF8C]">Dashboard</a>
  
      <!-- Recipes link with dropdown -->
      <div class="relative group">
        <a href="/recipes" class="nav-link hover:text-[#D2AF8C]">Recipes</a>
        <!-- Dropdown content -->
        <div class="absolute hidden group-hover:block bg-[#1a1a1a] shadow-lg mt-2 rounded-md w-48 z-10">
          <a href="/recipes" class="block px-4 py-2 hover:bg-[#2a2a2a]">Add a Recipe</a>
          <a href="/recipes/allRecipes" class="block px-4 py-2 hover:bg-[#2a2a2a]">View All Recipes</a>
        </div>
      </div>
  
      <a href="/quiz" class="nav-link hover:text-[#D2AF8C]">BrewIQ</a>
      <a href="/contact" class="nav-link hover:text-[#D2AF8C]">Contact Us</a>
      <a href="/bitmoji" class="nav-link hover:text-[#D2AF8C]">Design Bitmoji</a>
    </div>
    <div>




    <% if (user) { %>
      <div class="flex gap-5 items-center">
        <div class="relative group">
          <button class=" flex items-center px-2 gap-1 py-1 rounded-full bg-[white] text-black hover:text-[#D2AF8C]">
            <span class="font-bold"><%= user.name.charAt(0).toUpperCase() %></span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <div class="absolute hidden group-hover:block right-0 mt-2 w-48 bg-[#1a1a1a] rounded-md shadow-lg z-10">
            <a href="/users/profile" class="block px-4 py-2 text-sm hover:bg-[#2a2a2a]">Profile</a>
            <a href="/users/settings" class="block px-4 py-2 text-sm hover:bg-[#2a2a2a]">Settings</a>
            <a href="/users/orders" class="block px-4 py-2 text-sm hover:bg-[#2a2a2a]">My Orders</a>
          </div>
          
        </div>
        
        <a href="/users/logout" class="px-4 py-1 bg-[#9E7148] rounded-md hover:bg-[#7D5B3A]">Logout</a>
        <a href="/cart" class="relative">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-1.4 5M17 13l1.4 5M9 21h6M9 21a2 2 0 11-4 0M15 21a2 2 0 104 0" />
          </svg>
          <span id="cart-count" class="absolute top-0 right-0 bg-red-500 text-white rounded-full text-xs w-4 h-4 flex items-center justify-center">0</span>
        </a>
      </div>
    <% } else { %>
      <div class="flex gap-5">
        <a href="/users/login" class="px-4 py-1 bg-[#9E7148] rounded-md hover:bg-[#7D5B3A]">Login</a>
        <a href="/users/register" class="text-[#9E7148] hover:text-[#D2AF8C]">Register</a>
        
      </div>
    <% } %>
  </div>
    
  </div>
  
  <script>

    document.addEventListener('DOMContentLoaded', function () {
      const links = document.querySelectorAll('.nav-link');
      const currentUrl = window.location.pathname;
  
      links.forEach(link => {
        if (link.getAttribute('href') === currentUrl) {
          link.classList.add('text-[#D2AF8C]');
        }
      });
    });
  </script>
  