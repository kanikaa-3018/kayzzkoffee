<% include ./partials/header.ejs%> <%include ./partials/navbar.ejs %>

<div class="bg-[#0f0f0f] w-full min-h-screen items-center justify-center flex">
  <div
    id="bitmojiModal"
    class="flex items-center justify-center z-50 mt-8 mb-8"
  >
    <div class="bg-white p-5 rounded-lg w-[1000px] relative">
      <h2
        class="text-5xl font-bold mb-4 coffeeitem text-[#9E7148] text-center pb-4"
      >
        Design Your Coffee Bitmoji
      </h2>
      <div class="flex flex-col mb-4">
        <!-- Background Color Picker Section -->
        <div class="flex justify-between">
          <div class="flex items-center gap-2 mb-4">
            <label for="bgColorPicker" class="font-semibold"
              >Background Color:</label
            >
            <input
              type="color"
              id="bgColorPicker"
              value="#ffffff"
              class="border border-gray-800"
            />
          </div>

          <!-- Pen Color Picker Section -->
          <div class="flex items-center gap-2 mb-4">
            <label for="penColorPicker" class="font-semibold">Pen Color:</label>
            <input
              type="color"
              id="penColorPicker"
              value="#000000"
              class="border border-gray-800"
            />
          </div>

          <!-- Pen Thickness Section -->
          <div class="flex items-center gap-2 mb-4">
            <label for="penThickness" class="font-semibold"
              >Pen Thickness:</label
            >
            <input
              type="range"
              id="penThickness"
              min="1"
              max="10"
              value="5"
              class="border border-gray-800"
            />
          </div>

          <!-- Pen Type Section -->
          <div class="flex items-center gap-2 mb-4">
            <label for="penType" class="font-semibold">Pen Type:</label>
            <select id="penType" class="border border-gray-800">
              <option value="pencil">Pencil</option>
              <option value="brush">Brush</option>
              <option value="eraser">Eraser</option>
            </select>
          </div>
        </div>
        <!-- Sticker Section -->
        <div class="flex items-center gap-2 mb-4">
          <% stickers.forEach(function(sticker) { %>
          <div class="sticker-item">
            <img
              src="<%= sticker.src %>"
              alt="<%= sticker.name %>"
              class="w-16 h-16 cursor-pointer"
            />
          </div>
          <% }) %>
          <button
            id="addSticker"
            class="bg-[#2a2a2a] text-white px-4 py-2 rounded-md ml-8"
          >
            Add Sticker
          </button>
        </div>

        <!-- Text Input Section -->
        <div class="flex items-center gap-2 mb-4">
          <label for="textInput" class="font-semibold">Text:</label>
          <input
            type="text"
            id="textInput"
            placeholder="Enter text here"
            class="border border-gray-800"
          />
          <label for="textSize" class="font-semibold">Font Size:</label>
          <input
            type="range"
            id="textSize"
            min="10"
            max="100"
            value="20"
            class="border border-gray-800"
          />
          <label for="textColorPicker" class="font-semibold">Text Color:</label>
          <input
            type="color"
            id="textColorPicker"
            value="#000000"
            class="border border-gray-800"
          />
          <button
            id="addText"
            class="bg-[#2a2a2a] text-white px-4 py-2 rounded-md ml-8"
          >
            Add Text
          </button>
        </div>
      </div>

      <!-- Canvas -->
      <canvas
        id="bitmojiCanvas"
        class="border border-gray-800"
        width="960"
        height="400"
      ></canvas>

      <!-- Action Buttons -->
      <div class="mt-4 flex gap-2">
        <button
          id="clearCanvas"
          class="bg-red-500 text-white px-4 py-2 rounded-md"
        >
          Clear
        </button>
        <button
          id="saveBitmoji"
          class="bg-green-500 text-white px-4 py-2 rounded-md"
        >
          Save
        </button>
      </div>

      <button id="closeModal" class="absolute top-4 right-4 text-black">
        &times;
      </button>
    </div>
  </div>
</div>
<% include ./partials/footer.ejs%>
