<% include ./partials/header.ejs%>
<% include ./partials/navbar.ejs%>

<% if (success_msg.length > 0) { %>
  <div class="alert alert-success text-center bg-[#D2AF8C]" id="flash-message">
    <%= success_msg %>
  </div>
<% } %>
